<%= form_for @product, url: products_path, html: { multipart: true } do |f| %>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@product.errors.count, "error") %>.
    </div>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

      <%= f.label :order_date %>
      <%= f.text_field :order_date, value: Time.now.strftime("%A"), class: 'form-control' %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.label :dish_category %>
      <%= f.select :dish_category, Product::DISH_CATEGORIES, class: 'form-control'%>

      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: 'form-control' %>

      <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
</div>
<% end %>